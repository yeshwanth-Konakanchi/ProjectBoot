package com.crmindz.bcjmay2017.operators.lab5;


/**
 * @author Yeshwanth Konakanchi
 * This class calculates the square and cube of a given number.
 */
public class PowersCalculation {

	/**
	 * This method calculates the square and cube of a given number and displays the result.
	 */
	public void calculatePowers() {

		for (int i = 0; i <= 10; i++) {

			System.out.println(i + "\t" + (int) Math.pow(i, 2) + "\t" + (int) Math.pow(i, 3));
		}
	}

	public static void main(String args[]) {

		PowersCalculation pc = new PowersCalculation();

		pc.calculatePowers();
	}
}
